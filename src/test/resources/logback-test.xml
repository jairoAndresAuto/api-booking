<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Configura un Appender para mostrar los logs en la consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configura el Root Logger con el nivel de log deseado -->
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Logger especÃ­fico para Karate -->
    <logger name="com.intuit.karate" level="debug"/>

</configuration>